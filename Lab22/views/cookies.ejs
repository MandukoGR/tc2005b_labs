<%- include('../partials/head.ejs') %>
<% if (ultimo_item) { %>
    <h2>El Ãºltimo item agregado fue: <%= ultimo_item %> </h2>

<%}%>
<div class="row">
    <% if (items.length > 0){ %>
        <% for (let item of items){ %>
            <div class="col-12 mb-2 col-md-4">
                <div class="card">
                <img src ="<%= item.thumbnailUrl%>" alt = "" class="card-img-top">
                <div class="card-body">
                    <h5><%= item.title%></h5>
                    <p><%= item.precio%></p>
                    <button class="btn btn-dark">Comprar</button>
                </div>
                </div>
            </div>
            <% } %>
        <% } else {%>
            <h3>No hay items</h3>
        <% } %>   

</div>
<form action = "/Cookies" method = "POST" enctype="multipart/form-data">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" >
    <label for = "precio"> Ingresa precio: </label>
    <input class = "form-control" type = "text" name = "precio" required/>
    <label for = "id"> id: </label>
    <input class = "form-control" type = "text" name = "id" required/>
    <label for = "title"> Ingresa titulo: </label>
    <input class = "form-control" type = "text" name = "title" required/>
    <label for = "archivo"> Subir imagen: </label>
    <input type="file" name="archivo">
    <input class = "btn btn-primary" type = "submit" value = "Agregar item" />
  </form>
    
